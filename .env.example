# WhatsApp Multi-Instance Manager - Environment Configuration Template
# Copy this file to .env and configure with your values

# Environment
NODE_ENV=development
# NODE_ENV=production

# Server Configuration
PORT=5000
SERVER_ID=server-01
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/whatsapp-manager
# Production: mongodb://whatsapp-user:password@localhost:27017/whatsapp_production?authSource=admin

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Security (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
SESSION_SECRET=your-session-secret-key

# Production Instance Manager Configuration
MAX_INSTANCES_PER_SERVER=100
HEALTH_CHECK_INTERVAL=30000
MAX_MEMORY_PER_INSTANCE=512
MAX_ERROR_COUNT=3
RESTART_DELAY=5000
SESSION_CLEANUP_DAYS=7

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
# LOG_LEVEL=debug (for development)

# Puppeteer Configuration
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable (Ubuntu)
# PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true (if using system Chrome)

# File Paths (use absolute paths in production)
# SESSION_BASE_PATH=/opt/whatsapp-manager/sessions
# BROWSER_PROFILES_PATH=/opt/whatsapp-manager/browser-profiles
# BACKUP_PATH=/opt/whatsapp-manager/backups
# LOGS_PATH=/opt/whatsapp-manager/logs

# Monitoring & Alerts (optional)
# ENABLE_PROMETHEUS_METRICS=true
# PROMETHEUS_PORT=9090
# ALERT_EMAIL=admin@your-domain.com
# ALERT_WEBHOOK_URL=https://your-domain.com/alerts

# Ubuntu VPS Configuration (production only)
# RUN_AS_USER=whatsapp-manager
# RUN_AS_GROUP=whatsapp-manager
# MAX_MEMORY_TOTAL=8G
# MAX_CPU_PERCENT=80
# MAX_OPEN_FILES=65536

# Backup Configuration
# AUTO_BACKUP_ENABLED=true
# BACKUP_RETENTION_DAYS=30
# BACKUP_COMPRESSION=gzip

# Security Headers
# ENABLE_CORS=true
# CORS_ORIGIN=https://your-domain.com
# ENABLE_HELMET=true
# TRUST_PROXY=true